<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/list_item_trip_id_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        android:labelFor="@id/list_item_trip_id_text_view"
        tools:text="@string/trip_id_hint" />

    <TextView
        android:id="@+id/origination_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/list_item_trip_id_text_view"
        android:padding="4dp"
        android:textColor="@color/colorPrimary"
        tools:text="@string/origin_hint" />

</RelativeLayout>